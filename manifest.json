{
  "description": "Extension that sets a default fixed zoom for all pages in Firefox",
  "manifest_version": 2,
  "name": "Fixed Zoom",
  "version": "1.8",
  "homepage_url": "https://github.com/Enchufadoo/fixedzoom",
  "icons": {
    "64": "icons/binoculars.png"
  },
  
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [{
    "run_at": "document_start",
    "match_about_blank": true,
    "matches": ["<all_urls>"]
  }],
  "browser_action": {
    "default_icon": "icons/binoculars.png",
    "default_title": "Fixed Zoom",
    "default_popup": "options/options.html",
    "browser_style": false
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": false
  },
  "default_locale": "en"
}